{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {"text":"Death Rates from Smoking", "fontSize": 20, "offset": 20,"subtitle":"Smoking death rate per 100,000 people ","subtitleColor": "grey","subtitlePadding":10},
    "width": 600,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "params": [
      {
        "name": "YearSelection",
        "value": 1990,
        "bind": {
          "input": "range",
          "min": 1990,
          "max": 2019,
          "step": 1,
          "name": "Year"
        }
      },
      {
        "name": "SmokingDeath",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 300,
          "step": 50,
          "name": "Global Percentage"
        }
      },
       {
        "name": "Continent_Selection",
        "bind":{
          "input": "select",
          "options": [
            null, 
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"        
            ],
            "labels":[
            "All Continents", 
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania" 
            ],
            "name": "Continent   "
        }
      }
    ],
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
          "format": {"type": "topojson", "feature": "oceans"}
        },
        "mark": {"type": "geoshape", "fill": "skyblue"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/zhxnlee/VegaLite_3179/main/ne_110m.json",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/zhxnlee/VegaLite_3179/main/Cancer/Smoking/death-rate-smoking.csv"
        },
        "transform": [
          {
            "lookup": "Entity",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
                "format": {
                  "type": "topojson",
                  "feature": "ne_110m_admin_0_countries"
                }
              },
              "key": "properties.NAME"
            },
            "as": "geo"
          },
          {
            "calculate": "datum['Deaths that are from all causes attributed to smoking per 100,000 people']",
            "as": "Smoking"
          },
          {"filter": "YearSelection == null || datum.Year ==  YearSelection"},
          {"filter": "datum['Smoking'] > SmokingDeath"},
          {"filter": "Continent_Selection == null || datum.Continents == Continent_Selection" }
        ],
        "mark": {"type": "geoshape"},
        "encoding": {
          "shape": {"field": "geo", "type": "geojson"},
          "color": {
            "field": "Smoking",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [50,100,150,200,250],
              "range": ["#fedc97", "#b5b682", "#7c9885", "#28666e", "#033f63","#000000"]
            }
          },
          "tooltip": [
            {"field": "Entity", "type": "nominal", "title": "Entity"},
            {"field": "Smoking", "type": "quantitative", "title": "Smoking deaths per 100,000 people"}
          ]
        }
      }
    ]
  }